<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity.HomeDetailsActivity"
    android:fitsSystemWindows="true"
    >
    <ImageView
        android:id="@+id/home_detail_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_btn"
        android:background="@color/skyBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_detail_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/home_detail_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="基米档案"
        android:textSize="20sp"
        android:padding="5dp"
        android:background="@color/skyBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_detail_iv_delete"
        app:layout_constraintStart_toEndOf="@+id/home_detail_iv_back"
        />
    <ImageView
        android:id="@+id/home_detail_iv_delete"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_delete_iv"
        android:background="@color/skyBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home_detail_tv_title"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_detail_iv_catPicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_detail_tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintDimensionRatio="4:3"
        />
    <TextView
        android:id="@+id/home_detail_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="姓名:测试"
        android:background="@color/skyBlue"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/home_detail_iv_catPicture"
        />
    <TextView
        android:id="@+id/home_detail_tv_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="基米细节"
        app:layout_constraintTop_toBottomOf="@id/home_detail_tv_name"
        app:layout_constraintStart_toStartOf="@id/home_detail_tv_name"
        app:layout_constraintEnd_toEndOf="@id/home_detail_tv_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>