<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity.LogonAcitvity"
    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logon_iv_mainIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/main_icon"
        app:shapeAppearance="@style/ShapeAppearance.Circle"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/logon_tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎来到HachiMi!"
        android:background="@color/skyBlue"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/logon_iv_mainIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/logon_etv_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入账号"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/logon_tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/logon_etv_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        app:layout_constraintTop_toBottomOf="@id/logon_etv_account"
        app:layout_constraintStart_toStartOf="@id/logon_etv_account"
        app:layout_constraintEnd_toEndOf="@id/logon_etv_account"
        />
    <Button
        android:id="@+id/logon_btn_logon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/logon_etv_password"
        app:layout_constraintStart_toStartOf="@id/logon_etv_password"
        app:layout_constraintEnd_toEndOf="@id/logon_etv_password"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logon_iv_register"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_iv"
        app:shapeAppearance="@style/ShapeAppearance.Circle"
        app:layout_constraintTop_toBottomOf="@id/logon_btn_logon"
        app:layout_constraintStart_toStartOf="@id/logon_etv_password"
        app:layout_constraintEnd_toEndOf="@id/logon_etv_password"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="没有账号?点此注册"
        app:layout_constraintTop_toBottomOf="@id/logon_iv_register"
        app:layout_constraintStart_toStartOf="@id/logon_iv_register"
        app:layout_constraintEnd_toEndOf="@id/logon_iv_register"
        />

</androidx.constraintlayout.widget.ConstraintLayout>