<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat1model_iv_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Circle" />

    <TextView
        android:id="@+id/chat1model_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="测试"
        app:layout_constraintStart_toEndOf="@+id/chat1model_iv_profile"
        app:layout_constraintTop_toTopOf="@+id/chat1model_iv_profile"
        />

    <TextView
        android:id="@+id/chat1model_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="测试"
        app:layout_constraintStart_toEndOf="@+id/chat1model_iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/chat1model_tv_name"

        />

    <TextView
        android:id="@+id/chat1model_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="测试"
        app:layout_constraintTop_toBottomOf="@+id/chat1model_iv_profile"
        />
    <TextView
        android:id="@+id/chat1model_tv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="测试"
        app:layout_constraintTop_toBottomOf="@+id/chat1model_tv_title"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat1model_iv_Cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/test2"
        android:background="@color/black"
        app:shapeAppearance="@style/ShapeAppearance.Cover"
        app:layout_constraintTop_toBottomOf="@+id/chat1model_tv_describe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="4:3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>