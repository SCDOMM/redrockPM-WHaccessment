<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity.Setting1Activity"
    android:fitsSystemWindows="true"
    >
    <ImageView
        android:id="@+id/deregister_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_btn"
        android:background="@color/skyBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/deregister_tv_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="注销账号"
        android:textSize="20sp"
        android:padding="5dp"
        android:background="@color/skyBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/deregister_iv_back"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/deregister_iv_mainIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/main_icon"
        app:shapeAppearance="@style/ShapeAppearance.Circle"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/deregister_tv_hint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="您真的要注销吗?"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toBottomOf="@id/deregister_iv_mainIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/deregister_tv_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="请再次输入您的密码"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toBottomOf="@id/deregister_tv_hint1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/deregister_etv_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="请输入密码"
        app:layout_constraintTop_toBottomOf="@id/deregister_tv_hint2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/deregister_etv_repassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:hint="请再次输入密码"
        app:layout_constraintTop_toBottomOf="@id/deregister_etv_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <android.widget.Button
        android:id="@+id/deregister_btn_confirm"
        android:text="确认注销"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        app:layout_constraintTop_toBottomOf="@id/deregister_etv_repassword"
        app:layout_constraintStart_toStartOf="@id/deregister_etv_repassword"
        app:layout_constraintEnd_toEndOf="@id/deregister_etv_repassword"/>
        />


</androidx.constraintlayout.widget.ConstraintLayout>