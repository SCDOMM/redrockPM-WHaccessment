<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity.RegisterActivity">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/register_iv_mainIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/main_icon"
        app:shapeAppearance="@style/ShapeAppearance.Circle"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/register_tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册您的HachiMi账户！"
        android:background="@color/skyBlue"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/register_iv_mainIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/register_etv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/register_tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/register_etv_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入账号"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/register_etv_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/register_etv_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        app:layout_constraintTop_toBottomOf="@id/register_etv_account"
        app:layout_constraintStart_toStartOf="@id/register_etv_account"
        app:layout_constraintEnd_toEndOf="@id/register_etv_account"
        />
    <EditText
        android:id="@+id/register_etv_repassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请再次确认您的密码"
        app:layout_constraintTop_toBottomOf="@id/register_etv_password"
        app:layout_constraintStart_toStartOf="@id/register_etv_account"
        app:layout_constraintEnd_toEndOf="@id/register_etv_account"
        />
    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/register_etv_repassword"
        app:layout_constraintStart_toStartOf="@id/register_etv_repassword"
        app:layout_constraintEnd_toEndOf="@id/register_etv_repassword"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/register_iv_logon"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logon_iv"
        app:shapeAppearance="@style/ShapeAppearance.Circle"
        app:layout_constraintTop_toBottomOf="@id/register_btn_register"
        app:layout_constraintStart_toStartOf="@id/register_btn_register"
        app:layout_constraintEnd_toEndOf="@id/register_btn_register"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="已有账号?点此登录"
        app:layout_constraintTop_toBottomOf="@+id/register_iv_logon"
        app:layout_constraintStart_toStartOf="@+id/register_iv_logon"
        app:layout_constraintEnd_toEndOf="@+id/register_iv_logon"
        />


</androidx.constraintlayout.widget.ConstraintLayout>