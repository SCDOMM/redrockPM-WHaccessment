<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity.HomeUploadActivity"
    android:fitsSystemWindows="true"
    >
    <ImageView
        android:id="@+id/home_upload_iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_btn"
        android:background="@color/skyBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/home_upload_tv_top"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/home_upload_tv_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="上传新的哈基米"
        android:textSize="20sp"
        android:padding="5dp"
        android:background="@color/skyBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/home_upload_iv_back"
        />
    <TextView
        android:id="@+id/home_upload_tv_confirm"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="提交"
        android:padding="5dp"
        android:textSize="20sp"
        android:background="@color/skyBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home_upload_tv_top"
        />
    <ImageView
        android:id="@+id/home_upload_iv_defaultImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/grey"
        android:src="@drawable/ic_default_iv"
        android:layout_margin="20dp"
        app:shapeAppearance="@style/ShapeAppearance.Cover"
        app:layout_constraintTop_toBottomOf="@id/home_upload_tv_top"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/home_upload_etv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入标题"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_upload_iv_defaultImage" />

    <EditText
        android:id="@+id/home_upload_etv_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="输入哈基米描述"
        app:layout_constraintTop_toBottomOf="@id/home_upload_etv_title" />
</androidx.constraintlayout.widget.ConstraintLayout>